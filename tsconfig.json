{
    "compileOnSave": false,
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./src",
      "lib": ["es2015", "es2016", "es2017", "es2015.promise"],
      "module": "esnext",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "preserveConstEnums": true,
      "removeComments": false,
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "esnext",
      "paths": {
        "@app/*": ["./*"]
      }
    },
    "exclude": [
      "node_modules"
    ]
  }
  